<br>
<h1>進捗状況作成</h1>
<br>
<%= form_for @step, :url => {:action => :create} do |f| %>
    <div class="form-group">
        <label><%= f.label :title %></label>
        <div><%= f.text_field :title, class: "form-control" %></div>
    </div>
  
    <div class="form-group">
        <label><%= f.label :detail %></label>
        <div><%= f.text_field :detail, class: "form-control" %></div>
    </div>
    
    <div>
        <%= link_to '戻る', task_steps_path, class: "btn btn-outline-secondary" %>
        <%= f.submit "登録", class: "btn btn-outline-primary" %>
    </div>
<% end %>