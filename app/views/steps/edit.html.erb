<br>
<h1>進捗状況編集</h1>
<br>
<%= form_for (@step), :html => {:class => "is-validated"} do |f| %>
    <div class="form-group" >
        <label><%= f.label :title %></label>
        <div><%= f.text_field :title, class: "form-control", required: true, maxlength: 20 %></div>
        <small class="form-text text-muted">
            入力必須、20文字以内で入力
        </small>
    </div>

    <div class="form-group">
        <label><%= f.label :detail %></label>
        <div><%= f.text_field :detail, class: "form-control", maxlength: 140 %></div>
        <small class="form-text text-muted">
            140文字以内で入力
        </small>
    </div>

    <div class="form-check">
        <%= f.radio_button :status, :未着手, class: "form-check-input" %>
        <label class="form-check-label" for="materialUnchecked">未着手</label>
    </div>

    <div class="form-check">
        <%= f.radio_button :status, :進行中, class: "form-check-input" %>
        <label class="form-check-label" for="materialChecked">進行中</label>
    </div>
    <div class="form-check">
        <%= f.radio_button :status, :完了, class: "form-check-input" %>
        <label class="form-check-label" for="materialUnchecked">完了</label>
    </div>

    <br>
    <div>
        <%= link_to '戻る', task_steps_path(@step.task_id), class: "btn btn-outline-secondary" %>
        <%= f.submit "更新", class: "btn btn-outline-primary"%>
    </div>
<% end %>
